{
  "ConnectionStrings": {
    "Database": "Host=ims.database;Port=5432;Database=ims;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "ims.redis:6379",
    "Queue": "amqp://ims-queue:5672"
  },
  "Authentication": {
    "Audience": "account",
    "TokenValidationParameters": {
      "ValidIssuers": [
        "http://ims.identity:8080/realms/ims",
        "http://localhost:18080/realms/ims"
      ]
    },
    "MetadataAddress": "http://ims.identity:8080/realms/ims/.well-known/openid-configuration",
    "RequireHttpsMetadata": false
  },
  "KeyCloak": {
    "HealthUrl": "http://ims.identity:8080/health/"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Ims.Modules.Attendance.Infrastructure.Outbox": "Warning",
        "Ims.Modules.Attendance.Infrastructure.Inbox": "Warning",
        "Ims.Modules.Events.Infrastructure.Outbox": "Warning",
        "Ims.Modules.Events.Infrastructure.Inbox": "Warning",
        "Ims.Modules.Ticketing.Infrastructure.Outbox": "Warning",
        "Ims.Modules.Ticketing.Infrastructure.Inbox": "Warning",
        "Ims.Modules.Users.Infrastructure.Outbox": "Warning",
        "Ims.Modules.Users.Infrastructure.Inbox": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://ims.seq:5341"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Ims.Api"
    }
  },
  "OTEL_EXPORTER_OTLP_ENDPOINT": "http://ims.jaeger:4317"
}
